<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".constraintrel">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="194dp"
        android:layout_height="371dp"
        android:layout_toRightOf="@+id/hv">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/longtext" />
    </ScrollView>


    <HorizontalScrollView
        android:id="@+id/hv"
        android:layout_width="168dp"
        android:layout_height="258dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/longtext" />
    </HorizontalScrollView>

    <ProgressBar
        android:id="@+id/pv"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="392dp"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@+id/hv"
        android:indeterminate="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:gravity="center">

        <ImageView
            android:layout_width="213dp"
            android:layout_height="100dp"
            android:src="@drawable/askaria" />
    </LinearLayout>


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="147dp"
        android:layout_height="53dp"
        android:labelFor="@+id/tv"
        android:numStars="3"
        android:contentDescription="@string/app_name"
        android:stepSize="0.3" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/pv"
        android:entries="@array/fav_colors"
        android:minHeight="40dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:max="20"
        android:min="1" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/corlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher_foreground" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:layout_marginRight="500dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:padding="20dp"
        android:text="menu"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>